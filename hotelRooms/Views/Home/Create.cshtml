@model hotelRooms.Models.Rooms

@{
    ViewData["Title"] = "Create room";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>

</head>
<body>

    <h1>Create</h1>

    <h4>Rooms</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateRooms" method="post">
                <div class="text-danger">
                </div>
             @*   <div class="form-group">
                    <label for="ID">ID</label>
                    <input type="number" id="ID" name="ID" class="form-control" value="" />
                </div>*@

                <div class="form-group">
                    <label for="Type">Type</label>
                    <select id="Type" name="Type" class="form-control">
                        <option value="Standard">Standard</option>
                        <option value="Premium">Premium</option>
                        <option value="Delux">Delux</option>
                    </select>
                </div>

                <div class="form-group ">
                    <label for="Price">Price</label>
                    <input type="number" id="Price" name="price" class="form-control" value="" />
                </div>

                <div class="form-group ">
                    <label for="maxPersoncount">maxPersoncount</label>
                    <input type="text" id="maxpeople" name="maxPersoncount" class="form-control" value="" />
                </div>
              
                <div class="form-group crudInput">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="form-group form-check">
                    <input type="hidden" name="occipied" value="false" /> <!-- Default value for occipied -->
                    <input type="checkbox" id="occipied" name="occipied" class="form-check-input" />
                    <label class="form-check-label" for="occipied">Occipied</label>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="@Url.Action("Index")">Back to Booking</a>
    </div>



</body>
</html>
